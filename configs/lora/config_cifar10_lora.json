{
    "name": "Imbalance_CIFAR10LT_IR10_DINOv2_LoRA",
    "n_gpu": 1,

    "arch": {
        "type": "DINOv2Model",
        "args": {
            "img_size": 224,
            "patch_size": 14,
            "num_classes": 10,
            "returns_feat": true,
            "num_experts": 1,
            "embed_dim": 384,
            "pretrained_path": "/Users/eitankassuto/Downloads/dinov2_vits14_pretrain.pth"
        }
    },
    "data_loader": {
        "type": "ImbalanceCIFAR10DataLoader",
        "args":{
            "data_dir": "./data/CIFAR-10",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 4,
            "imb_factor": 0.1,
            "resize_size": 224
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0.01
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "BSExpertLoss",
        "tau_min": 0,
        "tau_max": 2.0,
        "args": {
            "tau_list": [0, 1.0, 2.0]
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 100,
            "eta_min": 1e-6
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/cifar10/ir10/lora_finetuning",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "validate": true
    },
    "lora": {
        "rank": 8,
        "alpha": 16,
        "dropout": 0.1,
        "target_modules": [
            "attn.qkv",
            "attn.proj",
            "mlp.fc1",
            "mlp.fc2"
        ],
        "bias": "none"
    },
    "combiner": {
        "type": "Combiner",
        "mode": "mixup",
        "mixup": {
            "alpha": 0.8
        }
    }
} 